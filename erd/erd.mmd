    User {
        string id PK
        string username
        string email
        string password
        datetime createdAt
        datetime updatedAt
        string role
    }

    Company {
        string id PK
        string name
        string industry
        string description
        string profilePictureUrl
        string bannerUrl
        int foundedYear
        boolean verified
        string companySize
        string industryId FK
        datetime createdAt
        datetime updatedAt
    }

