        string id PK
        string addressLine1
        string addressLine2
        string city
        string state
        string postalCode
        string countryId FK
        string latitude
        string longitude
    }

    Country {
        string id PK
        string name
        string code
    }

    Office {
        string id PK
        string companyId FK
        string addressId FK
        string name        
        string phone
        string email
        string timezone
        datetime createdAt
        datetime updatedAt
    }

    SocialLink {
        string id PK
        string companyId FK
